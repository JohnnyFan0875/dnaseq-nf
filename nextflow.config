process {
  executor = 'local'

  withName: fastqc {
    container = 'biocontainers/fastqc:v0.11.9_cv8'
  }

  withName: fastp {
    container = 'biocontainers/fastp:v0.20.1_cv1'
  }

  withName: multiqc {
    container = 'multiqc/multiqc:v1.28'
  }

  withName: align_sort_reads {
    container = 'bioslimcontainers/bwa-samtools:bwa-0.7.17_samtools-1.13'
  }

  withName: mark_duplicates {
    container = 'broadinstitute/picard:3.4.0'
  }

  withName: base_recalibration {
    container = 'broadinstitute/gatk:4.6.2.0'
  }

  withName: gatk_haplotypecaller {
    container = 'broadinstitute/gatk:4.6.2.0'
  }

  withName: gatk_hard_filtering {
    container = 'broadinstitute/gatk:4.6.2.0'
  }

  withName: vep_annotation {
    container = 'ensemblorg/ensembl-vep:release_113.0'
  }
  
}

docker.enabled = true